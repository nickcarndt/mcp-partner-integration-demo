{
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/mcp", "destination": "/api/server" },
    { "source": "/mcp/(.*)", "destination": "/api/server" }
  ],
  "functions": {
    "api/server.ts": {
      "maxDuration": 60
    },
    "api/index.ts": {
      "maxDuration": 10
    }
  }
}
