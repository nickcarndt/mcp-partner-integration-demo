{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/healthz", "destination": "/api/healthz" },
    { "source": "/healthz/ready", "destination": "/api/healthz/ready" },
    { "source": "/mcp-manifest.json", "destination": "/api/mcp-manifest" },
    { "source": "/sse", "destination": "/api/sse" },
    { "source": "/tools", "destination": "/api/tools" },
    { "source": "/tools/:toolName", "destination": "/api/tools/:toolName" }
  ],
  "headers": [
    {
      "source": "/sse",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-transform"
        },
        {
          "key": "X-Accel-Buffering",
          "value": "no"
        }
      ]
    }
  ]
}
