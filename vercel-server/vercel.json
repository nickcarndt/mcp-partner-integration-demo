{
  "version": 3,
  "routes": [
    { "src": "/", "dest": "/api/index" },
    { "src": "/healthz", "dest": "/api/healthz" },
    { "src": "/healthz/ready", "dest": "/api/healthz/ready" },
    { "src": "/mcp-manifest.json", "dest": "/api/mcp-manifest" },
    { "src": "/sse", "dest": "/api/sse" },
    { "src": "/tools", "dest": "/api/tools" },
    { "src": "/tools/:toolName", "dest": "/api/tools/:toolName" }
  ],
  "headers": [
    {
      "source": "/sse",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-transform"
        },
        {
          "key": "X-Accel-Buffering",
          "value": "no"
        }
      ]
    }
  ]
}
