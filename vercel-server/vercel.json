{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/api/index.ts" },
    { "source": "/healthz", "destination": "/api/healthz.ts" },
    { "source": "/healthz/ready", "destination": "/api/healthz/ready.ts" },
    { "source": "/mcp-manifest.json", "destination": "/api/mcp-manifest.ts" },
    { "source": "/sse", "destination": "/api/sse.ts" },
    { "source": "/tools", "destination": "/api/tools.ts" },
    { "source": "/tools/:toolName", "destination": "/api/tools/[toolName].ts" }
  ],
  "headers": [
    {
      "source": "/sse",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-transform"
        },
        {
          "key": "X-Accel-Buffering",
          "value": "no"
        }
      ]
    }
  ]
}
