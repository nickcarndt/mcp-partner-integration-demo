{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/mcp-manifest.json", "destination": "/api/mcp-manifest" },
    { "source": "/sse", "destination": "/api/sse" },
    { "source": "/tool-ping", "destination": "/api/tool-ping" },
    { "source": "/tool-shopify", "destination": "/api/tool-shopify" },
    { "source": "/tool-stripe", "destination": "/api/tool-stripe" }
  ],
  "headers": [
    {
      "source": "/sse",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-transform"
        },
        {
          "key": "X-Accel-Buffering",
          "value": "no"
        }
      ]
    }
  ]
}
